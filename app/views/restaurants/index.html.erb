<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">Discover Great Restaurants</h1>
    <%= link_to "Add a Restaurant", new_restaurant_path, class: "btn btn-success" %>
  </div>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm border-0 h-100">
          <img src="/assets/restaurant1.jpg" class="card-img-top" alt="restaurant">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text text-muted"><%= truncate(restaurant.address, length: 60) %></p>
            <p class="fw-semibold text-primary mb-2"><%= restaurant.category.capitalize %></p>
            <%= link_to "View Details", restaurant_path(restaurant), class: "btn btn-outline-primary w-100" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

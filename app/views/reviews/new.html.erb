<div class="container mt-5">
  <h1 class="mb-4 text-center">
    Write a Review for <%= @restaurant.name %>
  </h1>

  <div class="card shadow-sm p-4 mx-auto" style="max-width: 600px;">
    <%= form_with model: [@restaurant, @review], local: true do |form| %>
      <div class="mb-3">
        <%= form.label :rating, class: "form-label fw-bold" %>
        <%= form.number_field :rating, in: 0..5, step: 1, class: "form-control", placeholder: "Rate between 0 to 5" %>
      </div>

      <div class="mb-3">
        <%= form.label :content, class: "form-label fw-bold" %>
        <%= form.text_area :content, rows: 4, class: "form-control", placeholder: "Write your review here..." %>
      </div>

      <div class="d-grid">
        <%= form.submit "Submit Review", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Back to Reviews", restaurant_reviews_path(@restaurant), class: "btn btn-outline-secondary" %>
  </div>
</div>
